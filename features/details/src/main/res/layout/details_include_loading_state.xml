<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:shimmer_auto_start="true"
    app:shimmer_direction="left_to_right"
    app:shimmer_duration="1000"
    app:shimmer_repeat_delay="1000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/ds_size_04">

        <View
            android:id="@+id/view_shimmer1"
            android:layout_width="@dimen/ds_size_20"
            android:layout_height="@dimen/ds_size_20"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ds_size_06"
            android:background="@drawable/details_shimmer_rounded_shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_shimmer2"
            android:layout_width="0dp"
            android:layout_height="@dimen/details_shimmer_micro_line_size"
            android:layout_margin="@dimen/ds_size_04"
            android:background="@drawable/details_shimmer_rounded_shape"
            app:layout_constraintEnd_toEndOf="@id/view_shimmer1"
            app:layout_constraintStart_toStartOf="@id/view_shimmer1"
            app:layout_constraintTop_toBottomOf="@id/view_shimmer1" />

        <View
            android:id="@+id/view_shimmer3"
            android:layout_width="0dp"
            android:layout_height="@dimen/details_shimmer_micro_line_size"
            android:layout_marginHorizontal="@dimen/ds_size_04"
            android:layout_marginTop="@dimen/ds_size_02"
            android:background="@drawable/details_shimmer_rounded_shape"
            app:layout_constraintEnd_toEndOf="@id/view_shimmer4"
            app:layout_constraintStart_toStartOf="@id/view_shimmer4"
            app:layout_constraintTop_toBottomOf="@id/view_shimmer2" />

        <View
            android:id="@+id/view_shimmer4"
            android:layout_width="0dp"
            android:layout_height="@dimen/details_shimmer_large_line_size"
            android:layout_marginHorizontal="@dimen/ds_size_15"
            android:layout_marginTop="@dimen/ds_size_04"
            android:background="@drawable/details_shimmer_rounded_shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_shimmer3" />

        <View
            android:id="@+id/view_shimmer5"
            android:layout_width="@dimen/details_avatar_width"
            android:layout_height="@dimen/details_avatar_height"
            android:layout_marginStart="@dimen/ds_size_04"
            android:layout_marginTop="@dimen/ds_size_08"
            android:background="@drawable/details_shimmer_rounded_shape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_shimmer4" />

        <View
            android:id="@+id/view_shimmer6"
            android:layout_width="@dimen/details_avatar_width"
            android:layout_height="@dimen/details_avatar_height"
            android:layout_marginStart="@dimen/ds_size_04"
            android:background="@drawable/details_shimmer_rounded_shape"
            app:layout_constraintBottom_toBottomOf="@id/view_shimmer5"
            app:layout_constraintStart_toEndOf="@id/view_shimmer5"
            app:layout_constraintTop_toTopOf="@id/view_shimmer5" />

        <View
            android:id="@+id/view_shimmer7"
            android:layout_width="@dimen/details_avatar_width"
            android:layout_height="@dimen/details_avatar_height"
            android:layout_marginStart="@dimen/ds_size_04"
            android:background="@drawable/details_shimmer_rounded_shape"
            app:layout_constraintBottom_toBottomOf="@id/view_shimmer6"
            app:layout_constraintStart_toEndOf="@id/view_shimmer6"
            app:layout_constraintTop_toTopOf="@id/view_shimmer6" />

        <View
            android:id="@+id/view_shimmer8"
            android:layout_width="0dp"
            android:layout_height="@dimen/details_shimmer_small_line_size"
            android:layout_marginTop="@dimen/ds_size_14"
            android:layout_marginEnd="@dimen/ds_size_08"
            android:background="@drawable/details_shimmer_rounded_shape"
            app:layout_constraintEnd_toEndOf="@id/view_shimmer9"
            app:layout_constraintStart_toStartOf="@id/view_shimmer5"
            app:layout_constraintTop_toBottomOf="@id/view_shimmer5" />

        <View
            android:id="@+id/view_shimmer9"
            android:layout_width="0dp"
            android:layout_height="@dimen/details_shimmer_small_line_size"
            android:layout_marginTop="@dimen/ds_size_02"
            android:background="@drawable/details_shimmer_rounded_shape"
            app:layout_constraintEnd_toEndOf="@id/view_shimmer6"
            app:layout_constraintStart_toStartOf="@id/view_shimmer8"
            app:layout_constraintTop_toBottomOf="@id/view_shimmer8" />

        <View
            android:id="@+id/view_shimmer10"
            android:layout_width="0dp"
            android:layout_height="@dimen/details_shimmer_small_line_size"
            android:layout_marginTop="@dimen/ds_size_02"
            android:layout_marginEnd="@dimen/ds_size_04"
            android:background="@drawable/details_shimmer_rounded_shape"
            app:layout_constraintEnd_toEndOf="@id/view_shimmer8"
            app:layout_constraintStart_toStartOf="@id/view_shimmer9"
            app:layout_constraintTop_toBottomOf="@id/view_shimmer9" />

        <View
            android:id="@+id/view_shimmer12"
            android:layout_width="0dp"
            android:layout_height="@dimen/details_shimmer_small_line_size"
            android:layout_marginTop="@dimen/ds_size_02"
            android:layout_marginEnd="@dimen/ds_size_04"
            android:background="@drawable/details_shimmer_rounded_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/view_shimmer10"
            app:layout_constraintStart_toStartOf="@id/view_shimmer10"
            app:layout_constraintTop_toBottomOf="@id/view_shimmer10"
            app:layout_constraintVertical_bias="0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>
